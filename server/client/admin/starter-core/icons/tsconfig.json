{
    "compilerOptions": {
        "baseUrl": "./src",
        "outDir": "./dist/",
        "module": "ES2020",
        "target": "ES2015",
        "jsx": "react",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "declaration": true,
        "strict": true,
        "noImplicitAny": true,
        "allowJs": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*",
    ]
}
